<!-- 
    Safety controller
-->
<launch>
  <node pkg="nodelet" type="nodelet" name="roch_safety_controller" args="load roch_safety_controller/SafetyControllerNodelet /mobile_base_nodelet_manager">
    <remap from="roch_safety_controller/cmd_vel" to="/cmd_vel_mux/input/safety_controller"/>
    <remap from="roch_safety_controller/events/bumper" to="/mobile_base/events/bumper"/>
    <remap from="roch_safety_controller/events/cliff" to="/mobile_base/events/cliff"/>
    <remap from="roch_safety_controller/events/wheel_drop" to="/mobile_base/events/wheel_drop"/>
  </node>
</launch>
